extends base

block content 
    main.mian 
        .card-container 

            each tour in tours
                .card 
                    .card__header 
                        .card__picture 
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${tour.imageCover}` alt= `${tour.name}`)
                        h3.heading-tertirary 
                            span= tour.name 
                    .card__details 
                        h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-days tour`
                        p.card__text= tour.summary 
                        .card_data 
                            svg.card__icon 
                                use(xlink:href="/img/icons.svg#icon-map-pin")
                            span.card__data-text= tour.startLocation.description 
                        .card_data 
                            svg.card__icon 
                                use(xlink:href="/img/icons.svg#icon-calendar")
                            span.card__data-text= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                        .card_data 
                            svg.card__icon 
                                use(xlink:href="/img/icons.svg#icon-flag")
                            span.card__data-text= `${tour.locations.length} - stops` 
                        .card_data 
                            svg.card__icon 
                                use(xlink:href="/img/icons.svg#icon-user")
                            span.card__data-text= `${tour.maxGroupSize} people`
                    .card__footer 
                        p 
                            span.card__footer-value= `$${tour.price}`
                            span.card__footer-text per person
                        p.card__rating 
                            span.card__footer-value= tour.ratingsAverage 
                            span.card__footer-text= `rating (${tour.ratingsQuantity})`
                        a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details
